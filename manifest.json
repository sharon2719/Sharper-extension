{
    "manifest_version": 2,
    "name": "Sharper",
    "version": "1.0",
    "description": "Launch a new tab with different design illustrations",

    "permissions": [
        "contextMenus",
        "tabs"
    ],

    "background": {
        "scripts": ["js/popup.js"]
    },

    "browser_action": {
        "default_icon": "Images/icon.png"
    },

    "icons": {
        "16": "Images/icon.png",
        "32": "Images/icon.png",
        "48": "Images/icon.png",
        "128": "Images/icon.png"
    }
}